<h1>リクエスト一覧</h1>

<hr>

<div class="container">
  <table class="table table-striped table-bordered table-hover">

    <thead>
      <tr><th>名前</th><th>更新日</th><th>買ってきた</th><th>削除</th></tr>
    </thead>

    <tbody>
      <% @wishes.each do |wish| %>
      <tr>

        <td>
          <%= e wish.text %>
        </td>

        <td>
          <%= e wish.updated_at %>
        </td>

        <td>
          <% if wish.active %>
          <form method="post" action="/wishes/complete">
            <input name="authenticity_token" value="<%= e session[:csrf] %>" type="hidden" />
            <input type="hidden" name="wish_id" value="<%= e wish.id %>" />
            <button type="submit" class="btn btn-success">買ってきた！</button>
          </form>
          <% else %>
          <form method="post" action="/wishes/activate">
            <input name="authenticity_token" value="<%= e session[:csrf] %>" type="hidden" />
            <input type="hidden" name="wish_id" value="<%= e wish.id %>" />
            <button type="submit" class="btn btn-default">再リクエスト</button>
          </form>
          <% end %>
        </td>

        <td>
          <% if wish.user_id == session[:user].id %>
          <form method="post" action="/wishes/destroy">
            <input name="authenticity_token" value="<%= e session[:csrf] %>" type="hidden" />
            <input type="hidden" name="wish_id" value="<%= e wish.id %>">
            <button type="submit" class="btn btn-danger">削除</button>
          </form>
          <% end %>
        </td>

      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<hr>

<% if @groups != [] %>

<h2>リクエストを作成</h2>

<form method="post" action="/wishes/new">
  <input name="authenticity_token" value="<%= e session[:csrf] %>" type="hidden" />
  <p>
    <label for="group_id">グループ</label>
    <select name="group_id" class="form-control">
      <% @groups.each do |group| %>
      <option value="<%= e group.id %>"><%= e group.name %></option>
      <% end %>
    </select>
  </p>
  <p>
    <div class="input-group">
      <input type="text" name="text" class="form-control" placeholder="みかん" />
      <span class="input-group-btn">
        <button type="submit" class="btn btn-primary">追加</button>
      </span>
    </div>
  </p>
</form>

<% end %>
