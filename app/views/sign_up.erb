<h1>アカウント作成</h1>

<hr>

<form action="/sign_up" method="post">
  <input name="authenticity_token" value="<%= e session[:csrf] %>" type="hidden" />
  <div class="form-group">

    <p>
      <label for="name">ユーザーＩＤ：</label>
      <input name="name" type="text" class="form-control" />
    </p>

    <p>
      <label for="email">メールアドレス：</label>
      <input name="email" type="text" class="form-control" />
    </p>

    <p>
      <label for="password">パスワード：</label>
      <input name="password" type="password" class="form-control" />
    </p>

    <p>
      <label for="confirm_password">パスワード（確認）：</label>
      <input name="confirm_password" type="password" class="form-control" />
    </p>

    <p>
      <input type="submit" value="アカウント作成" class="btn btn-primary" />
      <a href="/log_in" class="btn btn-default">すでにアカウントを持っています</a>
    </p>

  </div>
</form>
